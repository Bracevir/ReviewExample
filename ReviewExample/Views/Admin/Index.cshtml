@model IEnumerable<Review>

@{
    ViewData["Title"] = "Админ-панель";
}

<h2>Административное управление отзывами</h2>

<table class="table">
    <thead>
        <tr>
            <th>Пользователь</th>
            <th>Организация</th>
            <th>Рейтинг</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.UserName</td>
                <td>@review.OrganizationName</td>
                <td>@review.Rating/5</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@review.Id"
                          onsubmit="return confirm('Вы уверены, что хотите удалить этот отзыв?');">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


