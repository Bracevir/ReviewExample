@model Review

<h2>Оставить отзыв</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="OrganizationName"></label>
        <input asp-for="OrganizationName" />
        <span asp-validation-for="OrganizationName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" />
    </div>

    <div>
        <label asp-for="Liked"></label>
        <textarea asp-for="Liked" maxlength="1000"></textarea>
        <span asp-validation-for="Liked" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Disliked"></label>
        <textarea asp-for="Disliked" maxlength="1000"></textarea>
        <span asp-validation-for="Disliked" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" maxlength="1000"></textarea>
    </div>

    <div>
        <label asp-for="Rating"></label>
        <select asp-for="Rating">
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit">Отправить отзыв</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

